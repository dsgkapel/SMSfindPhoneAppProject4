<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:orientation="vertical"
    tools:context="com.example.smsphone.MainActivity" >

    <ImageView
        android:id="@+id/turnon"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:contentDescription="@string/button"
        android:onClick="turnon"
        android:src="@drawable/turnon" />

    <ImageView
        android:id="@+id/sponsorus"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:contentDescription="@string/button"
        android:onClick="sponsorus"
        android:src="@drawable/sponsorus" />

    <ImageView
        android:id="@+id/gopro"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:contentDescription="@string/button"
        android:onClick="sponsorus"
        android:src="@drawable/gopro" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:contentDescription="@string/button"
        android:onClick="settings"
        android:src="@drawable/settings" />

    <ImageView
        android:id="@+id/helpinfo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:contentDescription="@string/button"
        android:onClick="helpinfo"
        android:src="@drawable/helpinfo" />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/version"
        android:textColor="@color/White" />

</LinearLayout>